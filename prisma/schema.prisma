generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guard {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  createdAt DateTime @default(now())
  shifts    Shift[]
}

model Shift {
  id        Int      @id @default(autoincrement())
  guardName String
  date      String
  startTime String
  endTime   String
  location  String
  phone     String?
  createdAt DateTime @default(now())

  guardId   Int?      // ← اختياري
  guard     Guard?    @relation(fields: [guardId], references: [id])
}

